<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YasinPerizinanLembagaPelatihanKerja" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:windowBackground">@color/abuabu_tua</item>
        <item name="android:itemBackground">@color/abuabu_tua</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textColorPrimary">@color/textColorBlack</item>
    </style>

    <style name="TextNormal">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextBold">
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextNormal.TextVerySmall" parent="TextNormal">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="TextNormal.TextSmall" parent="TextNormal">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="TextNormal.TextNormal" parent="TextNormal">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextBold.TextNormal" parent="TextBold">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="TextBold.TextTitle" parent="TextBold">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBold.TextHeader" parent="TextBold">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Abu abu -->
    <style name="TextNormal.TextSmall.TextGrey" parent="TextNormal.TextSmall">
        <item name="android:textColor">@color/abuabu_muda</item>
    </style>
</resources>