<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Nama"
        android:textSize="16sp"
        android:textColor="@color/abuabu_muda"
        android:textStyle="bold"
        android:background="@color/abuabu_muda"/>
    <TextView
        android:id="@+id/etNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="18dp"
        android:text="Masukkan Nama"
        android:textColor="@color/abuabu_muda"
        android:textStyle="normal"
        android:textSize="16sp"
        android:inputType="text"
        android:maxLength="30"
        android:background="@drawable/bg_card_shimmer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Alamat"
        android:textSize="16sp"
        android:textColor="@color/abuabu_muda"
        android:textStyle="bold"
        android:background="@color/abuabu_muda"/>

    <TextView
        android:id="@+id/etAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="18dp"
        android:text="Masukkan Alamat"
        android:textColor="@color/abuabu_muda"
        android:textStyle="normal"
        android:textSize="16sp"
        android:background="@drawable/bg_card_shimmer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Nomor HP"
        android:textSize="16sp"
        android:textColor="@color/abuabu_muda"
        android:textStyle="bold"
        android:background="@color/abuabu_muda"/>

    <TextView
        android:id="@+id/etNomorHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="18dp"
        android:text="Masukkan Nomor Hp"
        android:textColor="@color/abuabu_muda"
        android:textStyle="normal"
        android:textSize="16sp"
        android:background="@drawable/bg_card_shimmer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Email"
        android:textSize="16sp"
        android:textColor="@color/abuabu_muda"
        android:textStyle="bold"
        android:background="@color/abuabu_muda"/>
    <TextView
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etNomorHp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="18dp"
        android:text="Masukkan Email"
        android:textColor="@color/abuabu_muda"
        android:textStyle="normal"
        android:textSize="16sp"
        android:background="@drawable/bg_card_shimmer" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:text="Password"
        android:textSize="16sp"
        android:textColor="@color/abuabu_muda"
        android:textStyle="bold"
        android:background="@color/abuabu_muda"/>
    <TextView
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="18dp"
        android:text="Masukkan Password"
        android:textColor="@color/abuabu_muda"
        android:textSize="16sp"
        android:background="@drawable/bg_card_shimmer" />

</LinearLayout>