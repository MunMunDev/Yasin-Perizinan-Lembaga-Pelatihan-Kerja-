<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.admin.main.AdminMainActivity"
    android:id="@+id/drawerLayoutMain">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:orientation="vertical">

            <include
                android:id="@+id/myAppBar"
                layout="@layout/appbar_nav_drawer"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvJenisPelatihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myAppBar"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:id="@+id/ivGambarJenisPelatihan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/image_jenis_pelatihan"/>

                    <TextView
                        android:id="@+id/tvTitleJenisPelatihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivGambarJenisPelatihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Jenis Pelatihan"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPenjelasanJenisPelatihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleJenisPelatihan"
                        app:layout_constraintStart_toEndOf="@id/ivGambarJenisPelatihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Atur Jenis Pelatihan Yang Akan Di Tampilkan"
                        android:textSize="14sp"
                        android:textColor="@color/abuabu_tua"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPelatihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myAppBar"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:id="@+id/ivGambarPelatihan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/image_pelatihan"/>

                    <TextView
                        android:id="@+id/tvTitlePelatihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivGambarPelatihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Pelatihan"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPenjelasanPelatihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvTitlePelatihan"
                        app:layout_constraintStart_toEndOf="@id/ivGambarPelatihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Atur Pelatihan Yang Terdaftar di Pelatihan Kerja"
                        android:textSize="14sp"
                        android:textColor="@color/abuabu_tua"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDaftarPelatihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myAppBar"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:id="@+id/ivGambarDaftarPelatihan"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/image_daftar_pelatihan"/>

                    <TextView
                        android:id="@+id/tvTitleDaftarPelatihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivGambarDaftarPelatihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Daftar Pelatihan"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPenjelasanDaftarPelatihan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleDaftarPelatihan"
                        app:layout_constraintStart_toEndOf="@id/ivGambarDaftarPelatihan"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Atur Pelatihan Yang Dapat Di Daftar Oleh User"
                        android:textSize="14sp"
                        android:textColor="@color/abuabu_tua"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvPendaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myAppBar"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:id="@+id/ivGambarPendaftar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/image_pendaftar2"/>

                    <TextView
                        android:id="@+id/tvTitlePendaftar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivGambarPendaftar"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Pendaftar"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPenjelasanPendaftar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvTitlePendaftar"
                        app:layout_constraintStart_toEndOf="@id/ivGambarPendaftar"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Atur Data Pendaftar yang telah terdaftar di Pelatihan Kerja"
                        android:textSize="14sp"
                        android:textColor="@color/abuabu_tua"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLogPembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/myAppBar"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:id="@+id/ivGambarLogPembayaran"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/image_log_pembayaran"/>

                    <TextView
                        android:id="@+id/tvTitleLogPembayaran"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivGambarLogPembayaran"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Log Pembayaran"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPenjelasanLogPembayaran"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleLogPembayaran"
                        app:layout_constraintStart_toEndOf="@id/ivGambarLogPembayaran"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Menampilkan Log Pembayaran Yang Telah di Bayar oleh User"
                        android:textSize="14sp"
                        android:textColor="@color/abuabu_tua"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAkunUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                    <ImageView
                        android:id="@+id/ivGambarAkunUser"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/image_account"/>

                    <TextView
                        android:id="@+id/tvTitleAkunUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ivGambarAkunUser"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Halaman Akun User"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPenjelasanAkunUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tvTitleAkunUser"
                        app:layout_constraintStart_toEndOf="@id/ivGambarAkunUser"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="12dp"
                        android:text="Atur Akun User yang telah terdaftar"
                        android:textSize="14sp"
                        android:textColor="@color/abuabu_tua"
                        android:textStyle="bold"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu_user"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>