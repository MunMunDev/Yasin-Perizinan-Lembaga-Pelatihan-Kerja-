<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvNo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="NO"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvKodeUnik"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="Kode Unik"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvBatch"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="Batch"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvPelatihan"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Pelatihan"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvKeterangan"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="Keterangan"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvTglDaftar"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:text="Tanggal Daftar"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:background="@drawable/bg_table"/>

    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="40dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="0dp"
        android:text=":::"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@drawable/bg_table" />

</LinearLayout>